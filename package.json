{
  "name": "aven-assistant",
  "version": "0.0.1-beta",
  "description": "AI Assistant",
  "license": "ISC",
  "author": "Operator Uplift",
  "main": "dist/main.js",
  "scripts": {
    "dev": "npm run build && concurrently \"npm run build:main:watch\" \"npm run build:renderer:watch\" \"npm run build:css:watch\" \"npm run electron:wait\"",
    "start": "electron .",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer && npm run build:css",
    "build:app": "npm run build && electron-builder",
    "build:win": "npm run build && electron-builder --win",
    "electron:wait": "node -e \"setTimeout(() => {}, 2000)\" && electron . --inspect=5858",
    "build:main": "esbuild src/main.ts --bundle --platform=node --outfile=dist/main.js --external:electron --format=cjs",
    "build:main:watch": "esbuild src/main.ts --bundle --platform=node --outfile=dist/main.js --external:electron --format=cjs --watch",
    "build:preload": "esbuild src/preload.ts --bundle --platform=node --outfile=dist/preload.js --external:electron --format=cjs",
    "build:renderer": "esbuild src/renderer.tsx --bundle --outfile=dist/renderer.js --format=esm --external:electron --external:fs --external:path --external:child_process",
    "build:renderer:watch": "esbuild src/renderer.tsx --bundle --outfile=dist/renderer.js --format=esm --external:electron --external:fs --external:path --external:child_process --watch",
    "build:css": "npx tailwindcss -i ./src/styles/input.css -o ./dist/output.css",
    "build:css:watch": "npx tailwindcss -i ./src/styles/input.css -o ./dist/output.css --watch"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "concurrently": "^8.0.0",
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.19.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.4",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-slot": "^1.2.3",
    "@supabase/supabase-js": "^2.79.0",
    "axios": "^1.13.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "lucide-react": "^0.552.0",
    "marked": "^16.4.1",
    "motion": "^12.23.24",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.49.0",
    "react-router-dom": "^6.30.1",
    "simplex-noise": "^4.0.3",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.22.4",
    "zustand": "^4.4.1"
  },
  "build": {
    "appId": "com.uplift.assistant",
    "productName": "Uplift Assistant",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "index.html",
      "assets/**/*",
      "package.json",
      ".env"
    ],
    "asarUnpack": [
      "assets/**/*",
      ".env"
    ],
    "extraResources": [
      {
        "from": ".env",
        "to": ".env",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/images/logo/logo.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
